@model Home
@{
    ViewData["Title"] = "Delete home";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col col-md-12">
        <form method="post">
            <div class="form-group">
                <input asp-for="@Model.AreaId" class="form-control" type="hidden" value="@Model.AreaId"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HomeType">Home type</label>
                <input asp-for="@Model.HomeType" class="form-control" value="@Model.HomeType" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Adress">Adress</label>
                <textarea class="form-control z-depth-1" asp-for="@Model.Adress" rows="3" value="@Model.Adress" disabled></textarea>
                <span asp-validation-for="@Model.Adress" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
        </form>
    </div>
</div>
<div class="text-center"><a class="btn btn-secondary" asp-controller="ReviewedHome" asp-action="Index" asp-route-id="@Model.AreaId">Cancel</a></div>
