@model HomeFinder.Models.LocationAttributes
@{
    ViewData["Title"] = "Update location attribute";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col col-md-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Attribute Name</label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rank">Rank</label>
                <input asp-for="Rank" class="form-control" value="@Model.Rank" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
<div class="text-center"><a class="btn btn-secondary" asp-controller="Attributes" asp-action="Details" asp-route-id="@Model.Id">Cancel</a></div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
