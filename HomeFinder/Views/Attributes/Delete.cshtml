@model HomeFinder.Models.LocationAttributes
@{
    ViewData["Title"] = "Delete location attribute";
}
<form asp-controller="Attributes" asp-action="Delete" method="post">
    <div>
        <label asp-for="Name">Attribute Name</label>
        <input asp-for="Name" value="@Model.Name" disabled/>
    </div>
    <div>
        <label asp-for="Rank">Rank</label>
        <input asp-for="Rank" value="@Model.Rank" disabled/>
    </div>
    <div>
        <button type="submit">Delete</button>
    </div>
</form>
<div>
    <a asp-controller="Attributes" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Cancel</a>
</div>
