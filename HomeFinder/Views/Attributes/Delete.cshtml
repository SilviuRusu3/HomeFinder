@model HomeFinder.Models.LocationAttributes
@{
    ViewData["Title"] = "Delete location attribute";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col col-md-12">
        <form asp-controller="Attributes" asp-action="Delete" method="post">
            <div class="form-group">
                <label asp-for="Name">Attribute Name</label>
                <input class="form-control" asp-for="Name" value="@Model.Name" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Rank">Rank</label>
                <input class="form-control" asp-for="Name" value="@Model.Rank" disabled />
            </div>
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
        </form>
    </div>
</div>
<div class="text-center"><a class="btn btn-secondary" asp-controller="Attributes" asp-action="Index">Cancel</a></div>
