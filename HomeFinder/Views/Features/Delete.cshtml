@model HomeFeatures
@{
    ViewData["Title"] = "Delete home feature";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col col-md-12">
        <form asp-controller="Features" asp-action="Delete" method="post">
            <div class="form-group">
                <label asp-for="Name">Feature Name</label>
                <input class="form-control" asp-for="Name" value="@Model.Name" disabled />
            </div>
            <div class="form-group">
                <label asp-for="HomeType">Home type</label>
                <input class="form-control" asp-for="HomeType" value="@Model.HomeType" disabled />
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
<div class="text-center"><a class="btn btn-secondary" asp-controller="Features" asp-action="Index">Cancel</a></div>
