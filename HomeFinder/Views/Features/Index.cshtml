@model IEnumerable<HomeFeatures>
@{
    ViewData["Title"] = "Feature List";
}
<h1>@ViewData["Title"]</h1>
@if (Model.Any<HomeFeatures>())
{
    <div class="text-center"><a class="btn btn-primary" asp-controller="Features" asp-action="General">Back to main</a></div>
    <div class="border border-info mt-3 mb-5">
        <table class="table table-bordered table-hover border-info">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Feature Name</th>
                    <th scope="col">Home Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attribut in Model)
                {
                <tr>
                    <td>@attribut.Id</td>
                    <td>@attribut.Name</td>
                    <td>@attribut.HomeType</td>
                </tr>
                    <tr class="text-center">
                        <td colspan="3">
                            <a asp-controller="Features" asp-action="details" asp-route-id="@attribut.Id" class="btn btn-primary">View</a>
                            <a asp-controller="Features" asp-action="Update" asp-route-id="@attribut.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Features" asp-action="Delete" asp-route-id="@attribut.Id" class="btn btn-primary text-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No home feature set</p>
    <div class="text-center"><a class="btn btn-primary" asp-controller="Features" asp-action="General">Back to main</a></div>
}
