@model HomeFeatures
@{
    ViewData["Title"] = "Update home feature";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col col-md-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Feature Name</label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeType">Home Type</label>
                <div>
                    <select asp-for="HomeType" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<HomeType>()">
                        <option value="">@Model.HomeType</option>
                    </select>
                    <span asp-validation-for="HomeType" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
<div class="text-center"><a class="btn btn-secondary" asp-controller="Features" asp-action="Index">Cancel</a></div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
